<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Rnwood.Dataverse.Data.PowerShell.psd1" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Rnwood.Dataverse.Data.PowerShell.psd1">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Update="Rnwood.Dataverse.Data.PowerShell.psm1">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="test.ps1">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="BuildFrameworkSpecifics" AfterTargets="Build">
    <MSBuild Projects="../Rnwood.Dataverse.Data.PowerShell.FrameworkSpecific/Rnwood.Dataverse.Data.PowerShell.FrameworkSpecific.csproj" Targets="Build" Properties="Configuration=$(Configuration)" BuildInParallel="true">
      
    </MSBuild>
    <ItemGroup>
      <FSOutputs Include="../Rnwood.Dataverse.Data.PowerShell.FrameworkSpecific/bin/$(Configuration)/**" />
    </ItemGroup>
    <Copy SourceFiles="@(FSOutputs)" DestinationFolder="$(OutDir)\%(RecursiveDir)" />

  </Target>

</Project>
