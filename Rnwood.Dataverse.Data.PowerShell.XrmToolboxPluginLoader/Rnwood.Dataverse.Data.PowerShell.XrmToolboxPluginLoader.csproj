<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <OutputType>Library</OutputType>
    <AssemblyName>Rnwood.Dataverse.Data.PowerShell.XrmToolboxPluginLoader</AssemblyName>
    <RootNamespace>Rnwood.Dataverse.Data.PowerShell.XrmToolboxPluginLoader</RootNamespace>
   </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="XrmToolBoxPackage" Version="1.2025.7.71"/>
  </ItemGroup>


  
  <Target Name="BuildXrmToolboxPlugin" AfterTargets="Build">
    <MakeDir Directories="$(OutDir)\plugins" />
    <Copy SourceFiles="$(OutDir)/Rnwood.Dataverse.Data.PowerShell.XrmToolboxPluginLoader.dll" DestinationFolder="$(OutputPath)/plugins" SkipUnchangedFiles="true" />
    <MSBuild Projects="../Rnwood.Dataverse.Data.PowerShell.XrmToolboxPlugin/Rnwood.Dataverse.Data.PowerShell.XrmToolboxPlugin.csproj" Targets="Restore;Build" Properties="Configuration=$(Configuration)" BuildInParallel="true">
    </MSBuild>
    <Exec Command="cmd /c &quot;robocopy &quot;$(ProjectDir)..\Rnwood.Dataverse.Data.PowerShell.XrmToolboxPlugin\bin\$(Configuration)\net48&quot; &quot;$(OutDir)plugins\Rnwood.Dataverse.Data.PowerShell.XrmToolboxPlugin&quot; /E /NJH /NJS &amp; exit 0&quot;" />
  </Target>

  <ItemGroup>
    <ProjectReference Include="../Rnwood.Dataverse.Data.PowerShell.XrmToolboxPlugin/Rnwood.Dataverse.Data.PowerShell.XrmToolboxPlugin.csproj" />
  </ItemGroup>



</Project>