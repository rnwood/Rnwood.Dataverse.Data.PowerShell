<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <OutputType>Library</OutputType>
    <AssemblyName>Rnwood.Dataverse.Data.PowerShell.XrmToolboxPluginLoader</AssemblyName>
    <RootNamespace>Rnwood.Dataverse.Data.PowerShell.XrmToolboxPluginLoader</RootNamespace>
    
    <PackageId>Rnwood.Dataverse.Data.PowerShell.XrmToolboxPlugin</PackageId>
    <Authors>Rnwood</Authors>
    <Description>PowerShell Scripting Workspace for XrmToolbox</Description>
    <PackageTags>XrmToolbox;PowerShell;Dataverse</PackageTags>
    <IsPackable>true</IsPackable>
    <RepositoryUrl>https://github.com/rnwood/Rnwood.Dataverse.Data.PowerShell</RepositoryUrl>
    <PackageProjectUrl>https://github.com/rnwood/Rnwood.Dataverse.Data.PowerShell</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <XrmToolBoxVersion>1.2025.10.74</XrmToolBoxVersion>
   </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="XrmToolBoxPackage" Version="$(XrmToolBoxVersion)" PrivateAssets="All" />
  </ItemGroup>


  
  <Target Name="BuildXrmToolboxPlugin" AfterTargets="Build">
    <MakeDir Directories="$(OutDir)\plugins" />
    <Copy SourceFiles="$(OutDir)/Rnwood.Dataverse.Data.PowerShell.XrmToolboxPluginLoader.dll" DestinationFolder="$(OutputPath)/plugins" SkipUnchangedFiles="true" />
    <MSBuild Projects="../Rnwood.Dataverse.Data.PowerShell.XrmToolboxPlugin/Rnwood.Dataverse.Data.PowerShell.XrmToolboxPlugin.csproj" Targets="Restore;Build" Properties="Configuration=$(Configuration)" BuildInParallel="true">
    </MSBuild>
    <Exec Command="cmd /c &quot;robocopy &quot;$(ProjectDir)..\Rnwood.Dataverse.Data.PowerShell.XrmToolboxPlugin\bin\$(Configuration)\net48&quot; &quot;$(OutDir)plugins\Rnwood.Dataverse.Data.PowerShell.XrmToolboxPlugin&quot; /E /NJH /NJS &amp; exit 0&quot;" />
  </Target>

  <Target Name="AddPluginFilesToPackage" BeforeTargets="GenerateNuspec">
    <ItemGroup>
      <_PluginFiles Include="$(OutDir)plugins\Rnwood.Dataverse.Data.PowerShell.XrmToolboxPlugin\**\*.*" />
      <Content Include="@(_PluginFiles)" Pack="true" PackagePath="lib\net48\Rnwood.Dataverse.Data.PowerShell.XrmToolboxPlugin" />
      <_PackageDependency Include="XrmToolBox">
        <Version>$(XrmToolBoxVersion)</Version>
        <TargetFramework>net48</TargetFramework>
      </_PackageDependency>
    </ItemGroup>
  </Target>

  <ItemGroup>
    <ProjectReference Include="../Rnwood.Dataverse.Data.PowerShell.XrmToolboxPlugin/Rnwood.Dataverse.Data.PowerShell.XrmToolboxPlugin.csproj">
        <PrivateAssets>all</PrivateAssets>
    </ProjectReference>
  </ItemGroup>



</Project>