{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Cmdlets: Launch pwsh (CoreCLR)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build (dotnet build)",
      "program": "pwsh.exe",
      "args": [
        "-NoExit",
        "-NoProfile",
        "-File",
        "${workspaceFolder}/test.ps1"
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "env": {
        "TESTMODULEPATH": "${workspaceFolder}/Rnwood.Dataverse.Data.PowerShell/bin/Debug/netstandard2.0"
      },
      "justMyCode": false
    },
     {
      "name": "Debug Cmdlets: Launch pwsh (Framework)",
      "type": "clr",
      "request": "launch",
      "preLaunchTask": "Build (dotnet build)",
      "program": "powershell.exe",
      "args": [
        "-NoExit",
        "-NoProfile",
        "-File",
        "${workspaceFolder}/Rnwood.Dataverse.Data.PowerShell/test.ps1"
      ],
      "cwd": "${workspaceFolder}/Rnwood.Dataverse.Data.PowerShell/bin/Debug/netstandard2.0",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Attach to pwsh (pick process)",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "justMyCode": false
    },
    {
      "name": "Debug XrmToolbox Plugin",
      "type": "clr",
      "request": "launch",
      "preLaunchTask": "Build XrmToolbox Plugin",
      "program": "${workspaceFolder}/.xrmtoolbox/XrmToolBox.exe",
      "cwd": "${workspaceFolder}/.xrmtoolbox",
      "stopAtEntry": false,
      "console": "internalConsole",
      "justMyCode": false
    }
  ]
  ,
  "compounds": [
    {
      "name": "Launch & Debug Cmdlets (auto-attach)",
      "configurations": [
        "Debug Cmdlets: Launch pwsh (CoreCLR)"
      ]
    }
  ]
}